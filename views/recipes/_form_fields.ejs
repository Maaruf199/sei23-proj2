<div class="form-row">
  <div class="form-item">
    <label>Name</label>
    <input type="text" name="name" value="<%= recipe.name %>">
  </div>
  <div class="form-item">
    <label>Chef</label>
    <select name="chef">
      <% chefs.forEach(chef => { %>
        <% if (chef.id === recipe.chef) { %>
          <option selected label="<%= chef.name %>" value="<%= chef.id %>">
        <% } else { %>
          <option label="<%= chef.name %>" value="<%= chef.id %>">
        <% } %>
      <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Publish Date</label>
    <input type="date" name="publishDate"
          value="<%= recipe.publishDate == null ? '' : recipe.publishDate.toISOString().split('T')[0] %>">
  </div>
  <div class="form-item">
    <label>Ingredients</label>
    <textarea name="ingredient"><%= recipe.ingredient %></textarea>
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>Food</label>
    <input type="file" name="food" class="recipe-food filepond">
  </div>
  <div class="form-item">
    <label>Directions</label>
    <textarea name="directions"><%= recipe.directions %></textarea>
  </div>
</div>